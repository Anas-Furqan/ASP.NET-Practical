@model Product

<form method="post" asp-action="CreateProduct" enctype="multipart/form-data">
    <input type="hidden" asp-for="Prod_Id" />
    <h2 class="text-success"> Create Product</h2>

    <label asp-for="Prod_Name">Product Name</label>
    <input asp-for="Prod_Name" type="text" class="form-control" />

    <label asp-for="Prod_Description">Product Description</label>
    <input asp-for="Prod_Description" type="text" class="form-control" />

    <label asp-for="Prod_Price">Product Price</label>
    <input asp-for="Prod_Price" type="text" class="form-control" />

    <label asp-for="ImageURL">Product Image</label>
    <input type="file" name="file" class="form-control" />

     

    <button class="btn btn-outline-success" type="submit">Create Product</button>
</form>