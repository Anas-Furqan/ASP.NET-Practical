@model Product




<form method="Post">

    <input type="hidden" asp-for="Prod_Id" />

    <label asp-for="Prod_Name">Category Name</label>
    <input disabled asp-for="Prod_Name" type="text" class="form-control" />

    <label asp-for="Prod_Description">Product Description</label>
    <input disabled asp-for="Prod_Description" type="text" class="form-control" />

    <label asp-for="Prod_Price">Product Price</label>
    <input disabled asp-for="Prod_Price" type="text" class="form-control" />

    <button class="btn btn-danger" type="submit">Delete Product</button>
    <a asp-action="ViewProduct" asp-controller="Home">Back To List</a>

</form>
